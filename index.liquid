title: Home
---

<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4 text-center text-blue-500">JSONPlaceholder API Data</h1>

    <!-- Alpine.js Data Fetching -->
    <div x-data="{
        posts: [], 
        users: [],
        async fetchData() {
            const postsResponse = await fetch('https://jsonplaceholder.typicode.com/posts');
            this.posts = await postsResponse.json();

            const usersResponse = await fetch('https://jsonplaceholder.typicode.com/users');
            this.users = await usersResponse.json();
        }
    }" x-init="fetchData()">

        <!-- Posts Section -->
        <div class="mb-6">
            <h2 class="text-xl font-semibold text-blue-500 mb-2">Posts</h2>
            <ul class="space-y-2">
                <template x-for="post in posts.slice(0, 5)" :key="post.id">
                    <li class="p-3 bg-gray-50 border border-gray-300 rounded-lg shadow-sm" x-text="post.title"></li>
                </template>
            </ul>
        </div>

        <!-- Users Section -->
        <div>
            <h2 class="text-xl font-semibold text-blue-500 mb-2">Users</h2>
            <ul class="space-y-2">
                <template x-for="user in users.slice(0, 5)" :key="user.id">
                    <li class="p-3 bg-gray-50 border border-gray-300 rounded-lg shadow-sm" x-text="user.name"></li>
                </template>
            </ul>
        </div>
    </div>
</div>
